{
  "name": "monorepo-npm",
  "version": "1.0.0",
  "type": "module",
  "description": "express & react monorepo using npm workplaces",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently \"npm run dev -w @monorepo-npm/shared\" \"npm run dev -w @monorepo-npm/backend\" \"npm run dev -w @monorepo-npm/frontend\"",
    "clean": "npm run clean --workspaces --if-present",
    "build:shared": "npm run build -w @monorepo-npm/shared",
    "build:backend": "npm run build -w @monorepo-npm/backend",
    "build:frontend": "npm run build -w @monorepo-npm/frontend",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasushi-mo/monorepo-npm.git"
  },
  "author": "yasushi-mo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yasushi-mo/monorepo-npm/issues"
  },
  "homepage": "https://github.com/yasushi-mo/monorepo-npm#readme",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=11.5.2"
  }
}
